@model FootballLeagueApp.Mvc.Models.UserLoginViewModel

<h3>Giriş Yap</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" asp-action-ReturnUrlParameter="@ViewBag.ReturnUrl">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Kullanıcı Adı
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                Şifre
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Giriş Yap" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <br />
    <a asp-controller="User" asp-action="SignUp">Kayıt Ol</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
