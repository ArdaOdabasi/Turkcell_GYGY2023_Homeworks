@model FootballLeagueApp.DTOs.Requests.StandingRequests.CreateNewStandingRequest

<h3>Puan Tablosuna Takım Ekle</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Puan
                <input asp-for="Score" class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                Galibiyet Sayısı
                <input asp-for="Win" class="form-control" />
                <span asp-validation-for="Win" class="text-danger"></span>
            </div>
            <div class="form-group">
                Beraberlik Sayısı
                <input asp-for="Draw" class="form-control" />
                <span asp-validation-for="Draw" class="text-danger"></span>
            </div>
            <div class="form-group">
                Mağlubiyet Sayısı
                <input asp-for="Defeat" class="form-control" />
                <span asp-validation-for="Defeat" class="text-danger"></span>
            </div>
            <div class="form-group">
                Attığı Gol Sayısı
                <input asp-for="GoalsFor" class="form-control" />
                <span asp-validation-for="GoalsFor" class="text-danger"></span>
            </div>
            <div class="form-group">
                Yediği Gol Sayısı
                <input asp-for="GoalsAgainst" class="form-control" />
                <span asp-validation-for="GoalsAgainst" class="text-danger"></span>
            </div>
            <div class="form-group">
                Takımlar
                <select asp-for="TeamId" class="form-control"  asp-items="ViewBag.Teams"  >
                    <option hidden="" value="" disabled selected>Lütfen Takım Seçiniz</option>
                </select>
                <span asp-validation-for="TeamId" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <input type="submit" value="Puan Tablosuna Takım Ekle" class="btn btn-primary" />
                <br />
            </div>
        </form>
    </div>
</div>

<div>
    <br />
    <a asp-controller="Standing" asp-action="Index">Puan Tablosuna Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
