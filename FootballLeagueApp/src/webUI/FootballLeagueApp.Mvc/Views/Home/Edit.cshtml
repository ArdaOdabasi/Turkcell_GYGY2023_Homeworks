@model FootballLeagueApp.DTOs.Requests.TeamRequests.UpdateTeamRequest

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>UpdateTeamRequest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" readonly />
                <span asp-validation-for="Id" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <label asp-for="FoundingDate" class="control-label"></label>
                <input asp-for="FoundingDate" class="form-control" />
                <span asp-validation-for="FoundingDate" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                Stadyumlar
                <select asp-for="StadiumId" class="form-control" asp-items="ViewBag.Stadiums">
                    <option hidden="" value="" disabled selected>Lütfen Stadyum Seçiniz</option>
                </select>
                <span asp-validation-for="StadiumId" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                Antrenörler
                <select asp-for="CoachId" class="form-control" asp-items="ViewBag.Coaches">
                    <option hidden="" value="" disabled selected>Lütfen Kategori Seçiniz</option>
                </select>
                <span asp-validation-for="CoachId" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <br />
    <a asp-action="Index">Takım Listesine Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
