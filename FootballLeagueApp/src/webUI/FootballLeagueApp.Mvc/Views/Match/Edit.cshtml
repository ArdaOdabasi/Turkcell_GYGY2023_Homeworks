@model FootballLeagueApp.DTOs.Requests.MatchRequests.UpdateMatchRequest

<h3>Maç Bilgilerini Güncelle</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Id
                <input asp-for="Id" class="form-control" readonly/>
                <span asp-validation-for="Id" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                Tarih
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                Sonuç
                <input asp-for="Result" class="form-control" />
                <span asp-validation-for="Result" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                Ev Sahibi Takım Id
                <input asp-for="HomeTeamId" class="form-control" readonly />
                <span asp-validation-for="HomeTeamId" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                Deplasman Takım Id
                <input asp-for="AwayTeamId" class="form-control" readonly />
                <span asp-validation-for="AwayTeamId" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                Stadyum Id
                <input asp-for="StadiumId" class="form-control" readonly />
                <span asp-validation-for="StadiumId" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <input type="submit" value="Maç Bilgilerini Güncelle" class="btn btn-primary" />
                <br />
            </div>
        </form>
    </div>
</div>

<div>
    <br />
    <a asp-action="Index">Maç Listesine Dön</a>
</div>

